{
    "name": "New Perspective",
    "version": "1.0",
    "permissions": ["activeTab"],
    "description": "Build an Extension!",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
       {
        "matches":  [
            "https://*.google.com/*",
            "https://*.npr.org/*",
            "https://*.news.yahoo.com/*"
        ],

        "js": [ "ext/jquery-3.4.1.min.js",
                "ext/popup.js",
                "ext/material.min.js",
                "content_script.js"],

        "css": ["ext/material.min.css",
                "news_box.css"
            ]
        }
      ],
    "manifest_version": 2,
    "web_accessible_resources": [
        "news_box.html",
        "news_box.css"
    ]
}